@model AcceptingOrders.Models.OrderModel;

<div class="icon-card mb-3 text-dark bg-white shadow rounded-20">
    <div class="row g-0">
        <div class="col position-relative">
            <div class="card-body p-3">
                <div class="row px-3 mb-2">
                    <p class="col m-0 p-0 card-text text-truncate">
                        <small class="text-muted">
                            Заказ №@Model.Id
                        </small>
                    </p>
                    <a class="col-auto m-0 p-0 ml-4 align-self-end" href="OrderModels/Edit/@Model.Id">
                        <span class="fs-5 bi bi-pencil text-success">

                        </span>
                    </a>
                </div>

                <h5 class="card-title text-truncate text-dark fw-bold">
                    Адрес отправителя:
                </h5>

                <p class="card-text text-truncate mb-2 text-wrap">
                    @Model.SenderAddress
                </p>

                <h5 class="card-title text-truncate text-dark fw-bold">
                    Адрес получателя:
                </h5>

                <p class="card-text text-truncate mb-2 text-wrap">
                    @Model.AddresseeAddress
                </p>

                <p class="card-text text-truncate">
                    <small class="text-muted">
                        Дата забора: @Model.Date
                    </small>
                </p>
                    
                <div class="row px-3">
                    <div class="col-sm order-sm-first order-4 px-0">
                        <a class="btn text-truncate btn-danger text-decoration-none col col-sm-auto" href="OrderModels/Delete/@Model.Id">
                            Удалить
                        </a>
                    </div>

                    <div class="col-sm-auto order-1 order-xl-3 align-self-center">
                        <p class="text-center m-0">
                            <span class="fs-6 fw-bold text-truncate">
                                @Model.Weight
                            </span> грамм
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>